<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.preference.PreferenceCategory
        app:title="@string/settings"
        android:icon="@drawable/ic_settings_tinted">
        <androidx.preference.ListPreference
            android:icon="@drawable/ic_settings_themes"
            app:defaultValue="@string/dark_mode_def_value"
            app:entries="@array/dark_mode_entries"
            app:entryValues="@array/dark_mode_values"
            app:key="@string/dark_mode"
            app:title="@string/theme"
            app:useSimpleSummaryProvider="true"/>
        <androidx.preference.Preference
            app:title="@string/language"
            android:icon="@drawable/ic_language"
            android:summary="Set application language.">
            <intent
                android:targetPackage="com.d4rk.englishwithlidia.plus"
                android:targetClass="com.d4rk.englishwithlidia.plus.ui.settings.LanguageActivity"/>
        </androidx.preference.Preference>
    </androidx.preference.PreferenceCategory>
</androidx.preference.PreferenceScreen>